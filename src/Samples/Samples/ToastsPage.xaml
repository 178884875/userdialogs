<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.ToastsPage"
             Title="Toasts">
    <ContentPage.Content>
        <TableView>
            <TableRoot>
                <TableSection>
                    <TextCell Text="Success" Command="{Binding Success}" />
                    <TextCell Text="Info" Command="{Binding Info}" />
                    <TextCell Text="Warn" Command="{Binding Warn}" />
                    <TextCell Text="Error" Command="{Binding Error}" />
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>