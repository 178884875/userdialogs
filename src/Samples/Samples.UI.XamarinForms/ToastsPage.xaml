<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.ToastsPage"
             Title="Toasts">
    <ContentPage.Content>
        <TableView>
            <TableRoot>
                <TableSection>
                    <TextCell Text="Message" Detail="{Binding Message}" />
                    <TextCell Text="Action Text" Detail="{Binding ActionText}" />
                    <TextCell Text="Duration (sec)" Detail="{Binding SecondsDuration}" />
                    <TextCell Text="Open Toast" Command="{Binding Open}" />
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>