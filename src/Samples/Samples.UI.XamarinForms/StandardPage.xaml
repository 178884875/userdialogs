<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.StandardPage"
             Title="Standard Dialogs">
    <ContentPage.Content>
        <TableView>
            <TableRoot>
                <TableSection>
                    <SwitchCell Text="Cancel After 3 Seconds" On="{Binding AutoCancel}" />
                    <TextCell Text="Alert" Command="{Binding Alert}" />
                    <TextCell Text="Alert (Long Text)" Command="{Binding AlertLongText}" />
                    <TextCell Text="ActionSheet" Command="{Binding ActionSheet}" />
                    <TextCell Text="ActionSheet (async)" Command="{Binding ActionSheetAsync}" />
                    <TextCell Text="Confirm" Command="{Binding Confirm}" />
                    <TextCell Text="Date" Command="{Binding Date}" />
                    <TextCell Text="Time" Command="{Binding Time}" />
					<TextCell Text="Time (24 Hour)" Command="{Binding Time24}" />
                    <TextCell Text="Login" Command="{Binding Login}" />
                    <TextCell Text="Prompt" Command="{Binding Prompt}" />
                    <TextCell Text="Prompt /w Text/No Cancel" Command="{Binding PromptNoTextOrCancel}" />
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>